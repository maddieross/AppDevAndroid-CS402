<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                tools:layout_editor_absoluteY="25dp" tools:layout_editor_absoluteX="16dp"
                android:id="@+id/first_box_edittext" android:hint="@string/firstboxhint"/>
        <EditText
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                tools:layout_editor_absoluteY="70dp" tools:layout_editor_absoluteX="16dp"
                android:id="@+id/second_box_edittext" android:hint="@string/secondboxhint"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="147dp"
                tools:layout_editor_absoluteX="31dp" android:id="@+id/concatenate_button" android:text="Concatenate"/>
        <TextView
                android:text="TextView"
                android:layout_width="197dp"
                android:layout_height="69dp" tools:layout_editor_absoluteY="203dp"
                tools:layout_editor_absoluteX="31dp" android:id="@+id/textView_concat" android:visibility="invisible"/>
        <Button
                android:text="Add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="286dp"
                tools:layout_editor_absoluteX="31dp" android:id="@+id/add_button"/>
        <TextView
                android:text="TextView"
                android:layout_width="197dp"
                android:layout_height="69dp" tools:layout_editor_absoluteY="346dp"
                tools:layout_editor_absoluteX="31dp" android:id="@+id/textView_add" android:visibility="invisible"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>